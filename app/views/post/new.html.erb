<h1> Add new post</h1>

<%= form_tag :action => 'create' do %>

    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@post.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

  <p> <label for = "post_title">Title</label>:
  <%= text_field 'posts', 'title' %></p>

  <p> <label for = "post_body"> Text</label>:
  <%= text_area 'posts', 'body' %></p>

  <p> <label for = "post_categorie_id">Categorie</label>:
  <%= collection_select(:posts, :categorie_id, @categories, :id, :name, prompt: true) %></p>

  <%= submit_tag "Create" %>
<% end %>

<%= link_to 'Back', {:action => 'list'} %>